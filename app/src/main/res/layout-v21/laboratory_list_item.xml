<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/laboratory_item_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/laboratory_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola mundo"
                style="@style/LabsTheme.v21.Text.Title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                style="@style/LabsTheme.v21.Text.Body1"
                android:text="Este es un subtitulo de prueba, solo esta para ver como se ven las tarjetas con algun texto extra."/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>