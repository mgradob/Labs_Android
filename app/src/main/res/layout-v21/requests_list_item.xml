<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/request_item_image"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_request_pending"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/request_item_user_name"
            android:text="Rodrigo Rodriguez Rodriguez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/LabsTheme.v21.Text.Body2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/request_item_user_id"
                android:text="A01234567"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                style="@style/LabsTheme.v21.Text.Body1"/>

            <TextView
                android:id="@+id/request_item_user_date"
                android:text="10/11/2014"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                style="@style/LabsTheme.v21.Text.Body1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>