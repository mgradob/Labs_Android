<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <RelativeLayout
        android:id="@+id/main_layout_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/toolbar_dashboard"
            android:layout_width="fill_parent"
            android:layout_height="128dp"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/primary"
            android:padding="4dp"
            android:titleTextAppearance="@style/LabsTheme.v21.Light.Text.Title"
            android:subtitleTextAppearance="@style/LabsTheme.v21.Light.Text.Subhead"
            android:gravity="bottom"/>

        <RelativeLayout
            android:id="@+id/fragment_container_dashboard"
            android:layout_width="400dp"
            android:layout_height="fill_parent"
            android:layout_below="@+id/toolbar_dashboard"/>

        <RelativeLayout
            android:id="@+id/fragment_requests_detail_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/toolbar_dashboard"
            android:layout_toRightOf="@id/fragment_container_dashboard"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/dashboard_drawer_list"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/dividers"
        android:dividerHeight="1dp"
        android:background="@color/background"/>

</android.support.v4.widget.DrawerLayout>
