<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@color/cardview_light_background">

    <ImageView
        android:id="@+id/category_item_icon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/category_item_text"
        style="@style/LabsTheme.v21.Light.Text.Body1"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignBaseline="@+id/category_item_icon"
        android:layout_alignParentBottom="true"
        android:background="@color/grid_text_background"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="CATEGORY" />

</RelativeLayout>