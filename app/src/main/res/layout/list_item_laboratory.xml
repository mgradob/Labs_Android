<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="270dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    android:layout_margin="16dp"
    android:background="@drawable/ripple_laboratory_list_item">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/laboratory_item_icon"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/laboratory_item_text"
            style="@style/LabsTheme.v21.Light.Text.Headline"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/laboratory_item_icon"
            android:background="@color/grid_text_background"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Hola mundo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/laboratory_item_icon"
            android:layout_margin="8dp"
            android:text="Este es un subtitulo de prueba, solo esta para ver como se ven las tarjetas con algun texto extra."
            android:textColor="@color/secondary_text" />

    </RelativeLayout>

</android.support.v7.widget.CardView>