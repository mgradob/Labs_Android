<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_teal"
        android:elevation="3dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="56dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:src="@drawable/ic_architecture_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:src="@drawable/ic_civil_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:src="@drawable/ic_electronics_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:src="@drawable/ic_chemistry_white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:src="@drawable/ic_mechatronics_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@color/dividers"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/user_id"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="@string/user_mat"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/user_pass"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="@string/user_pass"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/login_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@id/user_pass"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/user_login"
            android:textColor="@color/material_teal" />

    </LinearLayout>

    <TextView
        android:id="@+id/login_admin"
        style="@style/LabsTheme.v21.Light.Text.Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_frame"
        android:gravity="center"
        android:text="Administrador"
        android:textColor="@color/primary_dark_material_light" />

    <TextView
        android:id="@+id/login_title"
        style="@style/LabsTheme.v21.Text.Display2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_admin"
        android:gravity="center"
        android:text="Laboratorios"
        android:textColor="@color/primary_dark_material_light" />

</RelativeLayout>