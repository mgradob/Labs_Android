<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/request_detail_info"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/primary_dark"
        android:elevation="4dp">

        <LinearLayout
            android:id="@+id/request_detail_user_data"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="32dp">

            <TextView
                android:id="@+id/request_item_user_name"
                style="@style/LabsTheme.v21.Light.Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME" />

            <TextView
                android:id="@+id/request_item_user_id"
                style="@style/LabsTheme.v21.Light.Text.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/request_detail_user_data"
            android:gravity="right|center"
            android:orientation="horizontal"
            android:paddingRight="16dp">

            <ImageButton
                android:id="@+id/request_detail_complete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ripple_button_request_detail"
                android:src="@drawable/ic_done_white" />

            <ImageButton
                android:id="@+id/request_detail_checkout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ripple_button_request_detail"
                android:src="@drawable/ic_uid_white" />

            <ImageButton
                android:id="@+id/request_detail_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ripple_button_request_detail"
                android:src="@drawable/ic_cancel_white" />

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/request_detail_user_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/request_detail_info"
        android:background="@color/background"
        android:divider="@color/dividers" />

</RelativeLayout>