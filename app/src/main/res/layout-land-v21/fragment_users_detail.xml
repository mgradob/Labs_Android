<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="550dp"
    android:layout_height="400dp"
    cardview:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/users_detail_info"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@color/primary_dark"
            android:elevation="4dp">

            <LinearLayout
                android:id="@+id/users_detail_user_data"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="32dp">

                <TextView
                    android:id="@+id/users_detail_user_name"
                    style="@style/LabsTheme.v21.Light.Text.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/users_detail_user_id"
                        style="@style/LabsTheme.v21.Light.Text.Subhead"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="ID" />

                    <TextView
                        android:id="@+id/users_detail_user_career"
                        style="@style/LabsTheme.v21.Light.Text.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CAREER" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/request_detail_user_data"
                android:gravity="right|center"
                android:orientation="horizontal"
                android:paddingRight="16dp">

                <ImageButton
                    android:id="@+id/user_detail_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/ripple_button_user_detail"
                    android:src="@drawable/ic_edit_white" />

                <ImageButton
                    android:id="@+id/user_detail_delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/ripple_button_user_detail"
                    android:src="@drawable/ic_cancel_white" />

            </LinearLayout>

        </RelativeLayout>

        <ListView
            android:id="@+id/user_detail_history_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:divider="@color/dividers" />

    </LinearLayout>

</android.support.v7.widget.CardView>