<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- API 16 up until API 21 -->
    <!-- Login Activity -->
    <style name="LabsTheme.Compat.Login" parent="LabsTheme.Compat"/>

    <style name="LabsTheme.Compat.Login.EditText" parent="LabsTheme.Compat.Login">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_form_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="LabsTheme.Compat.Login.Button" parent="LabsTheme.Compat.Login">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>
