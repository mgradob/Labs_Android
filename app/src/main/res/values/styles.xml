<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- API 16 up until API 21 -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Login Activity -->
    <style name="AppTheme.Login" parent="AppTheme"/>

    <style name="AppTheme.Login.EditText" parent="AppTheme.Login">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_form_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="AppTheme.Login.Button" parent="AppTheme.Login">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- Categories Activity -->
    <style name="AppTheme.Categories" parent="AppTheme"/>

    <style name="AppTheme.Categories.Icon" parent="AppTheme.Categories">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="AppTheme.Categories.IconText" parent="AppTheme.Categories">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/list_item_background</item>
        <item name="android:textColor">@color/list_item_text</item>
    </style>

</resources>
